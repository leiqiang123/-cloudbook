/* pages/article/article.wxss */

@import '/static/iconfont/iconfont.wxss';

.wemark-wrap{
  padding: 0 30rpx;
}

.article .menu{
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  justify-content: space-between;
  border-top: 1px solid #F1F1F1;
  line-height: 100rpx;
  height: 100rpx;
  background: #FFF;
  z-index: 998;
}
.menu .iconfont{
  flex: 1;
  text-align: center;
  font-size: 20px;
}
.menu .iconfont:active{
  background: #555
}

/* 目录 */
.catalog{
  position: fixed;
  left: 0;
  top: 0;
  bottom: 0;
  background: #fff;
  padding-bottom: 100rpx;
  border: 1px solid #F1F1F1;
  width: 660rpx;
  z-index: 996;
  transform: translate3d(-100%, 0, 0);
  transition: transform .3s ease;
}
.active {
  transform: translate3d(0, 0, 0);
}
.catalog-item{
  font-size: 14px;
  color: #333;
  line-height: 70rpx;
  height: 70rpx;
  padding-left: 20rpx;
}
.catalog-item:active{
  background: #555;
}
.mask{
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: 888;
  background: rgba(0,0,0,.2)
}