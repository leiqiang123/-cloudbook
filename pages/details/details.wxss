/* pages/details/details.wxss */
.header{
  display: flex;
  justify-content: space-between;
}
.header .book-img image{
  width: 220rpx;
  height: 300rpx;
}
.header .book-r{
  margin-left: 40rpx;
  padding-bottom: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.book-title{
  font-weight: 700;
  font-size: 20px;
  color: #000;
}
.header .book-r text{
  font-size: 16px;
  color: #555;
}

.content-btn{
  display: flex;
  justify-content: space-between;
  margin-top: 50rpx;
}
.content-btn view button{
  margin: 0;
  width: 300rpx;
  font-size: 12px;
  background:#e9e9e9;
  border: 1px solid #e9e9e9;
}
/* 简介部分 */
.summary{
  margin-top: 30rpx;
  border-top: 6px solid #e9e9e9;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.summary .summary-title{
  font-weight: 700;
  font-size: 16px;
  margin: 30rpx 20rpx;
}
.summary .summary-content{
  margin-top: 50rpx;
  margin-left: 30rpx;
  margin-bottom: 30rpx;
  font-size: 12px;
  color: #333;
}
.summary .summary-footer{
  display: flex;
  justify-content: space-between;
  font-size: 12px;
  color: #333;
  border-top: 1px solid #e9e9e9;
  padding-top: 30rpx;
  padding-bottom: 30rpx;
  border-bottom: 6px solid #e9e9e9;
}
.catalog{
  display: flex;
  justify-content: space-between;
}
.catalog view{
  margin-left: 20rpx;
}
.catalog .lookcatalog{
  color: #000;
  font-weight: 700;
}
.update{
  margin-right: 20rpx;
}

.btn-footer button{
  width: 85%;
  height: 80rpx;
  background: #409fff;
  line-height: 80rpx;
  color: #fff;
  font-size: 28rpx;
  margin: 20rpx auto;
}
.btn-footer{
  border-top: 3px solid #e9e9e9;
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0; 
} 